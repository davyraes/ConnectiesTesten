<Window x:Class="ConnectiesTesten.GemiddeldePrijsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConnectiesTesten"
        mc:Ignorable="d"
        Title="GemiddeldePrijsWindow" Height="300" Width="300">
    <StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Label Content="Soort:"></Label>
            <TextBox x:Name="textboxPrijs" MinWidth="100"></TextBox>
        </StackPanel>
        <Button x:Name="buttonBereken" Content="Bereken gemiddelde kostprijs" HorizontalAlignment="Center" Margin="10" Click="buttonBereken_Click"></Button>
        <Label x:Name="labalStatus" HorizontalAlignment="Center" Margin="10"></Label>
    </StackPanel>
</Window>
